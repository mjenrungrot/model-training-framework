# Include all package data
include pyproject.toml
include README.md
include LICENSE
include requirements.txt
include requirements-dev.txt
include environment.yml

# Include test files
recursive-include model_training_framework/tests *.py
recursive-include model_training_framework/tests *.yaml
recursive-include model_training_framework/tests *.yml
recursive-include model_training_framework/tests *.json

# Include configuration templates
recursive-include model_training_framework *.yaml
recursive-include model_training_framework *.yml

# Include type hints
recursive-include model_training_framework py.typed

# Exclude unnecessary files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude .gitignore
global-exclude .git
global-exclude .pytest_cache
global-exclude .mypy_cache
global-exclude .ruff_cache
